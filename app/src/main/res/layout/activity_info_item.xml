<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/info_item_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingStart="20dp"
        android:text="学员姓名"
        android:layout_centerVertical="true"
        android:textColor="@color/list_item_left"
        />

    <TextView
        android:id="@+id/tv_entity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="20dp"
        android:textSize="20sp"
        android:autoLink="phone"
        android:text="fgfg"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tv_name"
        android:textColor="@color/list_item_right"
        />
        <ImageView
            android:id="@+id/fileRight"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@mipmap/fileright"/>
    </RelativeLayout>
    <View
        android:id="@+id/info_item_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#e2e2e2"
        android:layout_alignParentBottom="true"
        />

</LinearLayout>